{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "#/*": ["src/*"],
            "#utils/*": ["src/utils/*"],
            "#config": ["src/utils/config"],
            "#env": ["src/utils/env"],
            "#controller/*": ["src/controller/*"],
            "#controller": ["src/controller"],
            "#graph/*": ["src/graph/*"],
            "#graph": ["src/graph"],
            "#repositories/*": ["src/repositories/*"],
            "#resolver/*": ["src/resolver/*"],
            "#resolver": ["src/resolver"],
            "#enricher/*": ["src/enricher/*"],
            "#enricher": ["src/enricher"],
            "#normalizer/*": ["src/normalizer/*"],
            "#normalizer": ["src/normalizer"],
            "#orchestrators/*": ["src/orchestrators/*"],
            "#orchestrators": ["src/orchestrators"],
            "#configurators/*": ["src/configurators/*"],
            "#spec/*": ["src/specification/*"],
            "#query/*": ["src/query/*"],
            "#files": ["src/utils/files"],
            "#crypto": ["src/utils/crypto"],
            "#shell": ["src/utils/shell"],
            "#git": ["src/utils/git"],
            "#utils": ["src/utils/utils"],
            "#std": ["src/utils/std"],
            "#check": ["src/utils/check"],
            "#assert": ["src/utils/assert"],
            "#machines/*": ["src/machines/*"],
            "#technologies/*": ["src/technologies/*"]
        },
        "outDir": "build",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": false,
        "useUnknownInCatchVariables": false,
        "sourceMap": true,
        "downlevelIteration": true
    },
    "include": ["src", "tests", "tasks"],
    "exclude": ["node_modules"]
}
