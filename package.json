{
    "name": "opentosca-vintner",
    "version": "1.0.0",
    "repository": "git@github.com:opentosca/opentosca-vintner",
    "homepage": "https://vintner.opentosca.org",
    "author": "Miles St√∂tzner <miles@stoetzner.de>",
    "license": "Apache-2.0",
    "dependencies": {
        "axios": "^0.27.2",
        "chai": "^4.3.6",
        "commander": "^9.2.0",
        "cors": "^2.8.5",
        "ejs": "^3.1.8",
        "express": "^4.18.1",
        "extract-zip": "^2.0.1",
        "fs-extra": "^10.1.0",
        "http-errors": "^2.0.0",
        "js-yaml": "^4.1.0",
        "open": "^8.4.0",
        "papaparse": "^5.3.2",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/ejs": "^3.1.1",
        "@types/express": "^4.17.13",
        "@types/fs-extra": "^9.0.13",
        "@types/http-errors": "^1.8.2",
        "@types/js-yaml": "^4.0.5",
        "@types/mocha": "^9.1.1",
        "@types/node": "^14.11.2",
        "@types/papaparse": "^5.3.2",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.29.0",
        "@typescript-eslint/parser": "^5.29.0",
        "dotenv": "^16.0.1",
        "eslint": "^8.18.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "license-checker": "^25.0.1",
        "mocha": "^10.0.0",
        "nodemon": "^2.0.16",
        "open-cli": "^7.0.1",
        "pkg": "^5.8.0",
        "prettier": "^2.7.1",
        "semver": "^7.3.7",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4"
    },
    "scripts": {
        "kappa": "git add . && git commit -m fix && git push",
        "repo:open": "open-cli https://github.com/opentosca/opentosca-vintner",
        "build": "tsc --build",
        "package": "pkg --config .pkgrc.json build/cli/index.js",
        "deploy": "cp ./dist/vintner-linux-x64 /usr/bin/vintner",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "style:check": "prettier --check --end-of-line auto \"./**/*.{ts,json,yaml,yml}\"",
        "style:fix": "prettier --write --end-of-line auto \"./**/*.{ts,json,yaml,yml}\"",
        "vintner": "node build/cli/index",
        "cli": "yarn ts-node src/cli/index",
        "test": "yarn test:local",
        "test:local": "mocha --require ts-node/register tests/**/*.ts",
        "test:docker": "docker build .",
        "benchmark": "yarn cli setup benchmark",
        "server:start": "node -r dotenv/config -r ts-node/register src/cli/index.ts server start",
        "server:serve": "nodemon -r dotenv/config --ext \"ts,json\" src/cli/index.ts server start",
        "docs:install": "cd docs && pip install -r requirements.txt",
        "docs:serve": "cd docs && MKDOCS_IS_DEV=true mkdocs serve --watch-theme",
        "docs:open": "open-cli http://localhost:8000",
        "interface:generate": "yarn build && yarn ts-node docs/cmds/interface/generate.ts",
        "record:home": "cd docs/cmds/casts && ./record.sh home",
        "record:getting-started": "cd docs/cmds/casts && ./record.sh getting-started",
        "opera-motivation": "./examples/opera-motivation/demo.sh",
        "unfurl-motivation:run": "./examples/unfurl-motivation/demo.sh",
        "licenses:check": "license-checker --production --summary --onlyAllow 'MIT;Apache-2.0;Python-2.0;BSD-2-Clause;BSD-3-Clause;ISC;CC-BY-3.0;CC0-1.0'",
        "licenses:generate": "yarn ts-node docs/cmds/licenses/generate.ts"
    }
}
